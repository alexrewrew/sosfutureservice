.slider
  margin-bottom 150px
  li
    display flex
    justify-content center
    width 100%
    height: 429px
    +mobile()
      height 329px
    img
      height 429px
      +mobile()
        height 329px

.lSSlideWrapper
  +mobile()
    height 329px !important

.lSSlideOuter .lSPager.lSGallery li.active, .lSSlideOuter .lSPager.lSGallery li:hover
  border-radius 0
  border 3px solid $red-main

.lSSlideOuter .lSPager.lSGallery li
  border 3px solid transparent
  transitions()
  img
    min-height 93px

.lSSlideOuter.vertical .lSGallery
  right auto
  margin-left 0 !important
  left 0
  +mobile()
    display none

.lSSlideOuter.vertical
  padding-right 0 !important
  padding-left 195px
  +mobile()
    padding 0 !important
    margin-bottom 20px

.slider-counter
  display flex
  flex-direction row
  flex-wrap nowrap
  margin 0 0 24px
  padding 0
  li
    list-style none
    font-weight 700
    font-size: 1.625em
    color $blue
    letter-spacing: 4.3px