#map
    width 100%
    height calc(100vh - 172px)
    position relative
    transitions()
    +portrait()
      height: calc(100vh - 217px)
    +mobile()
      padding-top 48px

#map.small
    height calc(100vh - 400px)

.start
  position absolute
  z-index 50
  top 90px
  right 10%
  display block
  background $white
  letter-spacing: 2.6px;
  color $text-darker
  font-size .875em
  padding 6px 0 9px
  width 100%
  max-width 263px
  text-align center
  border-radius 20px
  box-shadow: 0px 0px 20px 0px rgba(0,0,0,.1);
  +mobile()
    max-width unset
    width 37px
    height 37px
    right 15px
  .start-text
    +mobile()
      display none
  svg
    position: relative;
    top: 4px;
    margin-right 16px
    +mobile()
      margin 0
    g
      transitions()
      fill $text-darker
  &:hover
    background $red-main
    color $white
    svg
      g
        fill $white