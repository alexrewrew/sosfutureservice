@import '../../utilities/vars'
@import '../../utilities/mixins'

/* NAVIGATION */
nav
  background $red-main
  padding 12px 0 10px
  position fixed
  top 0
  left 0
  right 0
  z-index 100
  box-shadow: 0px 0px 38px 0px rgba(240,50,50,.5);
  ul
    display flex
    flex-wrap wrap
    flex-direction row
    margin 0
    padding 0
    +mobile()
      flex-direction column
    li
      list-style none
      position relative
      padding-left 10px
      +mobile()
        padding-left 0
      a
        display block
        color $white
        padding 9px 0 12px
        font-size .875em
        &:hover
          color $red-darker
  .menu
    +mobile()
      margin-left 20px
      margin-top 30px
      margin-bottom 30px
    li
      &:first-child
        padding-left 0
      &:last-child
        margin-right 0
      margin-right 28px
      +portrait()
        margin-right 3px
      a
        letter-spacing: 2.6px
        &:hover
          &:before
            background $red-darker
        &:before
          pseudo(block, absolute)
          left 0
          top 15px
          width 4px
          height 4px
          background transparent
          border-radius 50%
          transitions()
          +portrait()
            display none
          +mobile()
            left -15px
      a.active
        color $red-darker
        &:before
          background $red-darker
      .logo
        font-family $logo-font, sans-serif
        color $white
        font-weight 700
        font-size 1.375em
        letter-spacing 1px
        padding: 4px 0px
        +mobile()
          display none
        &:hover
          opacity .5
        &:before
          display none
  .login
    justify-content flex-end
    li
      &:last-child
        margin-left 16px
        +portrait()
          margin-left 4px
      a
        letter-spacing: 1.8px
        .fa
          padding-right: 8px;
      .registration
        background $red-middle
        border-radius 30px
        padding 8px 19px 12px
        &:hover
          background $white
          color $red-middle

.logo-mobile
    font-family $logo-font, sans-serif
    color $white
    font-weight 700
    font-size 1.375em
    letter-spacing 1px
    padding: 4px 0px

#nav-icon4 {
  margin 1px 0
  width: 35px;
  height: 22px;
  position: relative;
  transform: rotate(0deg)
  transition: .5s ease-in-out;
  cursor: pointer;
  float right
}

#nav-icon4 span {
  display: block;
  position: absolute;
  height: 2px;
  width: 100%;
  background: $white
  border-radius: 9px;
  opacity: 1;
  left: 0
  transform: rotate(0deg)
  transition: .25s ease-in-out;
}

#nav-icon4 span:nth-child(1) {
  top: 0px
  transform-origin: left center;
}

#nav-icon4 span:nth-child(2) {
  top: 10px
  transform-origin: left center;
}

#nav-icon4 span:nth-child(3) {
  top: 20px
  transform-origin: left center;
}

#nav-icon4.open span:nth-child(1) {
  transform: rotate(45deg);
  top: -3px;
  left: 8px;
}

#nav-icon4.open span:nth-child(2) {
  width: 0%;
  opacity: 0;
}

#nav-icon4.open span:nth-child(3) {
  transform: rotate(-45deg);
  top: 22px;
  left: 8px;
}

.nav-mobile
  display none

+mobile()
  .nav-panel
    display none
    height 100vh
  .nav-mobile
    display block


